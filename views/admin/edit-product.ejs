



<!----------------------> 
<%- include("../layout/head") %>

<link rel="stylesheet" href="/css/body.css">
<style>
  .form-group{
    width: 50%;
  }
</style>

  <body>
    <div class="aside" style="border: none;">
      <%- include("../layout/aside_admin") %>
    </div>
    <div class="content">
      <%- include("../layout/nav_admin") %>
      <!-- <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Thông tin tài khoản</h1>
    </div> -->


    <form class="form-signin" action="/edit-product" method="POST" enctype="multipart/form-data">
      <h2>Cập nhật xe</h2>
      <br>
      <h4>Phần mô tả</h4>
    <br>
      <div class="form-group">   
        <input type="hidden" value="<%- danhsach._id %>" name="id" class="form-control" placeholder="id" required>     
    </div> 
      <div class="form-group">
        <img src="/upload/<%- danhsach.image %>" style="width: 50%; height: 20%;" >
          <input type="file" name="image" >      
   </div>
      
        <div class="form-group">       
            <input type="text" value="<%- danhsach.name %>" name="name" class="form-control" placeholder="Tên sản phẩm" >    
     </div>
        <div class="form-group"> 
          <input type="number" value="<%- danhsach.quantity %>"  name="quantity" class="form-control" placeholder="Số lượng" >
        </div>
        <div class="form-group"> 
          <input type="text" value="<%- danhsach.note %>"  name="note" class="form-control" placeholder="Mô tả" >
        </div>
        <div class="form-group">
          <div class="controls">
            <select class="form-control" id="cateID" name="cateID">
            
            <% item.forEach(function(cate){ %>
       
                 <option name="cateID" value="<%= cate._id%>"><%= cate.namecate%></option>
                 
           
      
        <%    }) %>
      </select>
          </div>
      </div>
          <div class="form-group"> 
            <input type="number" name="price"  value="<%- danhsach.price %>"class="form-control" placeholder="Giá bán" >
          
          </div>
          <h4>Phần chi tiết</h4>
          <div class="form-group">
            
            <input type="text" class="form-control" value="<%- danhsach.videoid %>" id="videoid" name="videoid" placeholder="id video youtube">    
        </div>
         <div class="form-group">
            
            <input type="text" class="form-control"value="<%- danhsach.height %>" id="height" name="height" placeholder="Chiều cao yên">         
        </div>
        <div class="form-group">
            <input type="text" class="form-control"value="<%- danhsach.weight %>" id="weight" name="weight" placeholder="Trọng tải trung bình">         
        </div>
        <div class="form-group">
            <input type="text" class="form-control"value="<%- danhsach.color %>" id="color" name="color" placeholder="Màu sắc">         
        </div>
        <div class="form-group">
            <input type="text" class="form-control"value="<%- danhsach.engine %>" id="engine" name="engine" placeholder="Động cơ">         
        </div>
        <div class="form-group">
            <input type="text" class="form-control"value="<%- danhsach.wattage %>" id="wattage" name="wattage" placeholder="Công suất tối đa">         
        </div>
        <div class="form-group">
            <input type="text" class="form-control"value="<%- danhsach.capacity %>" id="capacity" name="capacity" placeholder="Dung tích">         
        </div>
        <div class="form-group">
            <input type="text" class="form-control"value="<%- danhsach.seat %>" id="seat" name="seat" placeholder="Số chỗ ngồi">
        </div>
        
        
        <button class="btn form-group btn-lg btn-warning btn-block text-uppercase" type="submit" style="width: 15%; margin-left: 15%;">Cập nhật</button>
        </form>

 
      
      </div>
      
       
  


        
</body>
 

 







