
<%- include("../layout/head") %>


<style>
  .form-group{
    width: 50%;
  }
</style>

  <body>
    <div class="aside" style="border: none;">
      <%- include("../layout/aside_admin") %>
    </div>
    <div class="content">
      <%- include("../layout/nav_admin") %>
      <!-- <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Thông tin tài khoản</h1>
    </div> -->


    <form class="form-signin" action="/insert" method="POST" enctype="multipart/form-data">
      <h2>Thêm xe</h2>

      <br>
      <% if (message.length > 0) { %>
        <div class="form-control"><%= message %></div>
    <% } %>
    <br>
    <h3>Mô tả</h3>
      <div class="form-group">
        <input type="text" name="name" class="form-control" placeholder="Tên xe" required>
      </div>
      <div class="form-group">
        <input type="number" name="quantity" class="form-control" placeholder="Số lượng" required>
        
      </div>
      <div class="form-group">
        <input type="text" name="note" class="form-control" placeholder="Mô tả" required>
      </div>
      
      <div class="form-group">
        <input type="number" name="price" class="form-control" placeholder="Giá cho thuê" required>
       
      </div>
    
        <div class="form-group">
            <div class="controls">
              <select class="form-control" id="cateID" name="cateID">
              
              <% item.forEach(function(cate){ %>
         
                   <option name="cateID" value="<%= cate._id%>"><%= cate.namecate%></option>
                   
             
        
          <%    }) %>
        </select>
            </div>
        </div>  

      <div class="form-group">
        <input type="file" name="image"   required >
      </div>
      <h3>Chi tiết</h3>
      <div class="form-group">
        <label for="videoid">Video ID</label>
        <input type="text" class="form-control" id="videoid" name="videoid">         
    </div>
    <div class="form-group">
        <label for="height">Chiều cao yên</label>
        <input type="text" class="form-control" id="height" name="height">         
    </div>
    <div class="form-group">
        <label for="weight">Trọng tải trung bình</label>
        <input type="text" class="form-control" id="weight" name="weight">         
    </div>
    <div class="form-group">
        <label for="color">Màu sắc</label>
        <input type="text" class="form-control" id="color" name="color">         
    </div>
    <div class="form-group">
        <label for="engine">Động cơ</label>
        <input type="text" class="form-control" id="engine" name="engine">         
    </div>
    <div class="form-group">
        <label for="wattage">Công suất tối đa</label>
        <input type="text" class="form-control" id="wattage" name="wattage">         
    </div>
    <div class="form-group">
        <label for="capacity">Dung tích</label>
        <input type="text" class="form-control" id="capacity" name="capacity">         
    </div>
    <div class="form-group">
        <label for="seat">Số chỗ ngồi</label>
        <input type="text" class="form-control" id="seat" name="seat">
    </div>
      <br>
      <button class="btn btn-lg btn-warning btn-block text-uppercase" type="submit" style="width:15%;margin-left: 15%;">Thêm</button>
    </form>
 
      
      </div>
      

  


        
</body>
 

 









 


