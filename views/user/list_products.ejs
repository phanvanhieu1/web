<style>
  .hieudt{
    background-color: #272d40;
    box-shadow: 0 2px 4px rgb(0, 0, 0, 0.4);
    width: calc(25% + 4px);
    margin: 10px;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    height: 350px;
    position: relative;
    padding: 20px;
    border-radius: 15px;
    color: #fff;
    cursor: pointer;
  }
  .hieudt:hover .item__img {
    transform: translateY(-50px) rotate(-20deg);
}
.hieudt:hover .item__title {
  transform: translate(-38px, -40px);
}
.hieudt:hover .item__price {
  transform: translate(-33px, -40px);
}
.hieudt:hover .item__action {
  visibility: visible;
    opacity: 100;
    margin-bottom: 0;
    margin-top: 0;
}
.item__img {
    width: 100%;
    transition: 0.5s ;
}

.item__img img {
    width: 100%;
    object-fit: cover;
}
.item-moto:hover .item__img {
    transform: translateY(-50px) rotate(-20deg);
}
.item__title, .item__price {
    font-size: 20px;
    font-weight: 500;
    text-align: center;
    transition: 0.5s;
}
.item__title {
    color: red;
}
.item-moto:hover .item__title {
    transform: translate(-38px, -40px);
}
</style>
<link rel="stylesheet" href="css/body.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
<div class="container">
  <h3 style="color: black;">Danh sách xe đang cho thuê</h3>
    <div class="row" style="justify-content: center;" >
      
        <% danhsach.forEach(function(product){ %>
        <div class="col-sm-3 hieudt" style="margin: 2%;" >
                  <div class="thumbnail" 
                      style="text-align: center;">
                    <div class="item__img">
                      <img
                      class=""
                      src="upload/<%- product.image %>"
                      alt=""
                     
                      style="margin-right: 6%;  width:100%;height: 200px;"
                    />
                    </div>
                    <div class="caption">
                      <div class="item__title">
                        <%- product.name %>
                      </div>
                      <div
                        class=""
                        style="
                          white-space: nowrap;
                          overflow: hidden;
                          text-overflow: ellipsis;
                        "
                      >
                        <%- product.note %>
                      </div>
                      <div
                        class=""
                        style="
                          white-space: nowrap;
                          overflow: hidden;
                          text-overflow: ellipsis;
                        "
                      >
                        Hãng: <%- product.cateID %>
                      </div>
                        <div class="">
                          <span class="lead" style="text-align: start; display: flex; align-items: center;">
                            <p style="color: #ffc107; font-size: 25px; font-weight: 700;"><%- product.price %></p>
                            <p style="font-size: 22px;">
                              ₫
                            </p>
                          </span>
                        </div>
                        <div style="margin-bottom: 5%;">
                          <a
                            class="btn btn-success"
                            href="/user/detail-product/<%- product._id %>"
                            >Chi tiết</a
                          >
                        </div>
                
                    </div>
                  </div>
            
             
              </div> 
              <% }); %>
        </div>
        

</div>